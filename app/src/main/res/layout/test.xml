<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:theme="@style/ThemeOverlay.YesOrNo.AppWidgetContainer"
                android:background="?attr/appWidgetBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/widget_margin">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="?attr/appWidgetBackgroundColor"
            android:text="The number is..."
            android:textColor="?attr/appWidgetTextColor"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text" android:layout_weight="1"/>
    <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="?attr/appWidgetBackgroundColor"
            android:text="@string/appwidget_text"
            android:textColor="?attr/appWidgetTextColor"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:layout_margin="@dimen/app_padding"
            android:contentDescription="@string/appwidget_text" android:layout_weight="1"
            android:padding="@dimen/app_padding"/>
    <Button
            android:layout_width="@dimen/width_button"
            android:layout_height="@dimen/height_button" android:id="@+id/button" android:layout_weight="1"
            android:background="@drawable/asset1"/>
</LinearLayout>